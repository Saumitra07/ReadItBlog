<%- include('./partials/header.ejs') %>
Post details:
<%if(post) {%>
    title: <%= post.title%>
    description: <%= post.description%>
    By: <%= post.first_name%> <%= post.last_name%>
    On: <%= post.create_date%>
<%}%>

<%if(user == post.user_id) {%>
    <form action = '/posts/<%= post.id%>/editBlog' method = 'GET'>
        <button type="submit">Edit</button>
    </form>
<%}%>
<%if(user == post.user_id) {%>
    <form action = '/posts/delete/<%= post.id%>' method = 'POST'>
        <button type="submit">Delete</button>
        </form>
<%}%>

<%if(votes.length>0){
    votes.forEach(vote => {
         if(vote.type==1){
            upvotes++
         }else{ 
            downvotes++
        }
    })}%>


<br>
<br>
<form action = '/posts/newComment' method = 'POST'>
    Add comment:
<input type="hidden" name="post_id" value="<%= post.id%>">
<textarea id="commentText" name="commentText"></textarea>
<button type="submit">Comment</button>
</form>

<br>
<br>

votes:

      <form action="/posts/upvote" method="POST">
        <input type="hidden" name="post_id" value="<%= post.id%>">
        <button type="submit" class="btn btn-default btn-sm">
          <span class="glyphicon glyphicon-chevron-up"></span> Upvote <%=upvotes %>
        </button>
        </form>
    <form action="/posts/downvote" method="post">
        <input type="hidden" name="post_id" value="<%= post.id%>">
        <button type="submit" class="btn btn-default btn-sm">
          <span class="glyphicon glyphicon-chevron-down"></span> Downvote <%=downvotes %>
        </button>
    </form>
     
Comments:
<%if(comments){%>
    <%comments.forEach(c => {%>
        comment: <%= c.comment%>
        on: <%= c.create_date%>
        By: <%= c.first_name%> <%=c.last_name%>
        <%if(user == c.user_id) {%>
            <form action = '/posts/deleteComment' method = 'POST'>
                <input type="hidden" name="comment_id" value="<%= c.id%>">
                <input type="hidden" name="post_id" value="<%= post.id%>">
                <button type="submit">Delete</button>
                </form>
        <%}%>
       
        <br>
    <%})%>
<%}%>

<%- include('./partials/footer.ejs') %>