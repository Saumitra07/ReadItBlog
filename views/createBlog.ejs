<%- include('./partials/header.ejs') %>
<div class="container form-width">   
    <div class="form">
    <form action = '/posts/new' method = 'POST'>
        <div class="row mb-3">
            <label for="title" class="col-sm-3 col-form-label text-center">Title</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            
        </div>
        <div class="row mb-3">
            <label for="description" class="col-sm-3 col-form-label text-center">description</label>
            <div class="col-sm-9">
                <input type="textarea" class="form-control" id="description" name="description" required>
            </div>
            
        </div>
        <div class="row mb-3">
            <label for="category" class="col-sm-3 col-form-label text-center">category</label>
            <div class="col-sm-9">
                <select id="category" name="category" class="form-select">
                    <%if(categories) {%>
                        <%categories.forEach(category => {%>
                            <option value="<%=category.id%>"><%= category.name%></option>
                        <%})%>
                    <%}%>
                </select>
            </div>
            
        </div>
        <div class="form-group">
            <button  class="btn btn-outline-success">Create</button>
        </div>
        
    </form>
    </div>
</div>
<%- include('./partials/footer.ejs') %>