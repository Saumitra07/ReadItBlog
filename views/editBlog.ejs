<%- include('./partials/header.ejs') %>
<div class="container">   
    <form action="/posts/<%=post.id%>?_method=PUT" method="post">
        <table class="table"> 
            <tr>
                <td><label for="title">Title</label></td>
                <td><input type="text" id="title" name="title" required value="<%=post.title%>"></td>
            </tr>
            <tr>
                <td><label for="description">description</label></td>
                <td><input type="textarea" id="description" name="description" required value="<%=post.description%>"></td>
            </tr>
            <tr>
                <td><label for="category">Category</label></td>
                <td>
                    <select id="category" name="category" value="<%= post.category_id%>">
                        <%if(categories) {%>
                            <%categories.forEach(category => {%>
                                <option value="<%=category.id%>"><%= category.name%></option>
                            <%})%>
                        <%}%>
                    </select>
                </td>
                  
            </tr>
            <tr>
                <td></td>
                <td><button>Submit</button></td>
            </tr>
    </form>
</div>
<%- include('./partials/footer.ejs') %>