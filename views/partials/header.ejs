	<div class="wrapper">
		<header class="shadow-sm p-3 mb-5 bg-white rounded">
			<nav class="navbar navbar-expand-lg navbar-light">
				<div class="container-fluid">
					<a class="navbar-brand logo" href="/">ReadIt</a>

					<div class="navbar-collapse" id="navbarNavDropdown">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link active header-menu-item" aria-current="page"
									href="/">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link active header-menu-item" aria-current="page"
									href="/trades">Trades</a>
							</li>
							<%if(user) {%>
							<li class="nav-item">
								<a class="nav-link active header-menu-item" aria-current="page"
									href="/trades/new">New Trade</a>
							</li>
							<%}%>
						</ul>
					</div>
					<ul class="navbar-nav justify-content-end">
						<%if(user) {%>
						<li class="nav-item">
							<a class="btn nav-link header-menu-item" href="/posts/new">Create New Post</a>
						</li>
						<%}%>
						<%if(!user) {%>
						<li class="nav-item">
							<a class="nav-link btn btn-outline-dark btn-login" href="/users/login">Login</a>
						</li>
						<li class="nav-item">
							<a href="/users/signup" class="btn btn-dark dark-weight-btn">Sign Up</a>
						</li>
						<%}  else {%>
						<li class="nav-item">
							<a class="nav-link btn btn-outline-dark btn-login" href="/users/logout">Logout</a>
						</li>
						<%}%>
					</ul>
				</div>
			</nav>

			<%if(errorMessages.length > 0) {
				errorMessages.forEach(message => {%>
					
					<div><%= message%></div>
				<%})
			}%>
		
			<%if(successMessages.length > 0) {
				successMessages.forEach(message => {%>
					<div><%= message%></div>
				<%})
			}%>
		</header>

